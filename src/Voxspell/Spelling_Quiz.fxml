<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="540.0" prefWidth="960.0"
            xmlns="http://javafx.com/javafx/8.0.102-ea" fx:controller="Voxspell.SpellingQuiz">
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Text fx:id="levelText" strokeType="OUTSIDE" strokeWidth="0.0" text="Level ?" textAlignment="CENTER">
                    <GridPane.margin>
                        <Insets left="50.0"/>
                    </GridPane.margin>
                    <font>
                        <Font size="28.0"/>
                    </font>
                </Text>
                <Text fx:id="wordsToSpellText" layoutX="60.0" layoutY="36.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Spell Word 1 of 10" textAlignment="CENTER" GridPane.rowIndex="1">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="50.0"/>
                    </GridPane.margin>
                </Text>
            </children>
        </GridPane>
    </top>
    <center>
        <GridPane alignment="CENTER" prefHeight="300.0" prefWidth="900.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="900.0" minWidth="50.0" prefWidth="480.0"/>
                <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="492.0" minWidth="10.0"
                                   prefWidth="480.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField prefWidth="855.0" text="Enter the word here" GridPane.columnSpan="2" GridPane.rowIndex="1"
                           onAction="#handleEnterWordBtn">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <opaqueInsets>
                        <Insets left="50.0" right="50.0"/>
                    </opaqueInsets>
                    <GridPane.margin>
                        <Insets left="50.0" right="50.0"/>
                    </GridPane.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#handleEnterWordBtn" prefHeight="50.0" prefWidth="250.0"
                        text="Enter" textAlignment="CENTER" GridPane.rowIndex="2">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="200.0"/>
                    </GridPane.margin>
                </Button>
                <Button layoutX="10.0" layoutY="397.0" mnemonicParsing="false" onAction="#handleRepeatWordBtn"
                        prefHeight="50.0" prefWidth="250.0" text="Repeat Word" textAlignment="CENTER">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <GridPane.margin>
                        <Insets left="200.0"/>
                    </GridPane.margin>
                </Button>
                <Button layoutX="10.0" layoutY="77.0" mnemonicParsing="false" onAction="#handleDefinitionBtn"
                        prefHeight="50.0" prefWidth="250.0" text="Hear Definition" textAlignment="CENTER"
                        GridPane.columnIndex="1">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="50.0" right="50.0"/>
                    </GridPane.margin>
                </Button>
                <Button layoutX="210.0" layoutY="383.0" mnemonicParsing="false" onAction="#handleBackBtn"
                        fx:id="backBtn" prefHeight="50.0" prefWidth="250.0" text="Back" textAlignment="CENTER"
                        GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="50.0"/>
                    </GridPane.margin>
                </Button>
            </children>
        </GridPane>
    </center>
</BorderPane>
