<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="540.0" prefWidth="960.0"
            xmlns="http://javafx.com/javafx/8.0.102-ea"
            fx:controller="voxspell.quiz.reportCard.PassedQuizReportCardController">
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Text fx:id="passedOrFailedLevelText" strokeType="OUTSIDE" strokeWidth="0.0" text="Passed!"
                      textAlignment="CENTER">
                    <GridPane.margin>
                        <Insets left="50.0"/>
                    </GridPane.margin>
                    <font>
                        <Font size="28.0"/>
                    </font>
                </Text>
                <Text fx:id="wordsSpeltCorrectlyText" layoutX="60.0" layoutY="36.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Words spelt:" textAlignment="CENTER" GridPane.rowIndex="1">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="50.0"/>
                    </GridPane.margin>
                </Text>
            </children>
            <effect>
                <Bloom/>
            </effect>
        </GridPane>
    </top>
    <center>
        <GridPane alignment="CENTER" prefHeight="300.0" prefWidth="960.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="900.0" minWidth="50.0" prefWidth="480.0"/>
                <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="492.0" minWidth="10.0"
                                   prefWidth="480.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane prefHeight="480.0" prefWidth="480.0" GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="358.0" minHeight="10.0" prefHeight="358.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="240.0" minHeight="10.0" prefHeight="71.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <GridPane prefHeight="169.0" prefWidth="270.0" GridPane.rowIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button fx:id="proceedToLevelBtn" mnemonicParsing="false" onAction="#handleNextLevelBtn"
                                        prefHeight="32.0" prefWidth="225.0" text="Proceed to Level xx">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#handleReturnToMainMenuBtn" prefHeight="32.0"
                                        prefWidth="225.0" text="Return to the Main Menu" GridPane.columnIndex="1"
                                        GridPane.rowIndex="1">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="retryLevelBtn" mnemonicParsing="false" onAction="#handleRetryLevelBtn"
                                        prefHeight="32.0" prefWidth="225.0" text="Retry Level xx"
                                        GridPane.columnIndex="1">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Button>
                            </children>
                        </GridPane>
                        <PieChart fx:id="pieChart" maxHeight="350.0" maxWidth="350.0" minHeight="350.0" minWidth="350.0"
                                  prefHeight="350.0" prefWidth="350.0">
                            <GridPane.margin>
                                <Insets left="65.0"/>
                            </GridPane.margin>
                        </PieChart>
                    </children>
                </GridPane>
                <Text fx:id="wordComparisonView" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"
                      textAlignment="CENTER" wrappingWidth="380.0">
                    <GridPane.margin>
                        <Insets left="50.0" right="50.0"/>
                    </GridPane.margin>
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Text>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </GridPane>
    </center>
</BorderPane>
