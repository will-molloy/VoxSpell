<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="540.0" prefWidth="960.0"
            xmlns="http://javafx.com/javafx/8.0.102-ea" fx:controller="voxspell.quiz.reportCard.PassedQuizReportCardController">
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Text fx:id="passedOrFailedLevelText" strokeType="OUTSIDE" strokeWidth="0.0" text="Passed!"
                      textAlignment="CENTER">
                    <GridPane.margin>
                        <Insets left="50.0"/>
                    </GridPane.margin>
                    <font>
                        <Font size="28.0"/>
                    </font>
                </Text>
                <Text fx:id="wordsSpeltCorrectlyText" layoutX="60.0" layoutY="36.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Words spelt:" textAlignment="CENTER" GridPane.rowIndex="1">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="50.0"/>
                    </GridPane.margin>
                </Text>
            </children>
            <effect>
                <Bloom/>
            </effect>
        </GridPane>
    </top>
    <center>
        <GridPane alignment="CENTER" prefHeight="300.0" prefWidth="960.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="900.0" minWidth="50.0" prefWidth="480.0"/>
                <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="492.0" minWidth="10.0"
                                   prefWidth="480.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane prefHeight="480.0" prefWidth="499.0" GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="258.0" minHeight="10.0" prefHeight="221.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="204.0" minHeight="10.0" prefHeight="154.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="138.0" minHeight="10.0" prefHeight="105.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#handleNextLevelBtn"
                                text="Next Level" GridPane.rowIndex="1"/>
                        <Button layoutX="10.0" layoutY="295.0" mnemonicParsing="false" onAction="#handleRetryLevelBtn"
                                text="Retry Level x" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Button layoutX="250.0" layoutY="295.0" mnemonicParsing="false"
                                onAction="#handleReturnToMainMenuBtn" text="Return to the Main Menu"
                                GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <PieChart fx:id="pieChart" GridPane.columnSpan="2"/>
                    </children>
                </GridPane>
                <Text fx:id="wordComparisonsText" strokeType="OUTSIDE" strokeWidth="0.0" text="words go here"
                      textAlignment="CENTER" wrappingWidth="380.0">
                    <font>
                        <Font size="28.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="50.0" right="50.0"/>
                    </GridPane.margin>
                </Text>
            </children>
        </GridPane>
    </center>
</BorderPane>
