<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="540.0" prefWidth="960.0"
            xmlns="http://javafx.com/javafx/8.0.112-ea"
            fx:controller="voxspell.quiz.reportCard.controller.FailedQuizReportCardController">
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="507.0" minWidth="10.0" prefWidth="480.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="481.0" minWidth="10.0" prefWidth="480.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="360.0" minHeight="10.0" prefHeight="340.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="60.0" minHeight="0.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="retryLevelBtn" mnemonicParsing="false" onAction="#handleRetryLevelBtn" prefHeight="32.0"
                        prefWidth="280.0" text="Retry Level xx" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <font>
                        <Font size="22.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleReturnToMainMenuBtn" prefHeight="32.0"
                        prefWidth="280.0" text="Main Menu" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <font>
                        <Font size="22.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </Button>
                <Button layoutX="10.0" layoutY="234.0" mnemonicParsing="false" onAction="#handleRandomCategoryBtn"
                        prefHeight="32.0" prefWidth="280.0" text="Random Category" GridPane.rowIndex="4">
                    <font>
                        <Font size="22.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="150.0"/>
                    </GridPane.margin>
                </Button>
                <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                    <children>
                        <Text fx:id="accuracyTextView" strokeType="OUTSIDE" strokeWidth="0.0" text="Accuracy : 100%"
                              textAlignment="CENTER" wrappingWidth="960.0">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                            <font>
                                <Font size="52.0"/>
                            </font>
                        </Text>
                    </children>
                </HBox>
                <Button fx:id="viewMistakesBtn" mnemonicParsing="false" onAction="#handleMistakesBtn" prefHeight="32.0"
                        prefWidth="280.0" text="View Mistakes" GridPane.rowIndex="3">
                    <font>
                        <Font size="22.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="150.0"/>
                    </GridPane.margin>
                </Button>
                <Pane fx:id="failurePane" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2"/>
                <Text fx:id="elapsedTimeTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="Elapsed Time: 60:59"
                      textAlignment="CENTER" wrappingWidth="270.0" GridPane.rowIndex="2">
                    <font>
                        <Font size="25.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="170.0"/>
                    </GridPane.margin>
                </Text>
                <Text fx:id="bestStreakTxt" layoutX="190.0" layoutY="394.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Best Streak: 10" textAlignment="CENTER" wrappingWidth="250.0" GridPane.columnIndex="1"
                      GridPane.rowIndex="2">
                    <font>
                        <Font size="25.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </Text>
            </children>
        </GridPane>
    </center>
</BorderPane>
