<BorderPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="voxspell.quiz.reportCard.controller.PassedQuizReportCardController">
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="507.0" minWidth="10.0" prefWidth="480.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="481.0" minWidth="10.0" prefWidth="480.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="320.0" minHeight="10.0" prefHeight="247.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="159.0" minHeight="10.0" prefHeight="146.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="154.0" minHeight="0.0" prefHeight="75.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="74.0" minHeight="10.0" prefHeight="66.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="proceedToNxtLevelBtn" mnemonicParsing="false" onAction="#handleProceedToNxtLevlBtn" prefHeight="32.0" prefWidth="250.0" text="Proceed to xx" GridPane.rowIndex="2">
                    <font>
                        <Font size="22.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="180.0" />
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleReturnToMainMenuBtn" prefHeight="32.0" prefWidth="250.0" text="Main Menu" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <font>
                        <Font size="22.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="40.0" />
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleRewardVideoBtn" prefHeight="32.0" prefWidth="250.0" text="Play Reward Video" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font size="22.0" />
                    </font>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <GridPane.margin>
                        <Insets left="40.0" />
                    </GridPane.margin>
                </Button>
                <Button layoutX="10.0" layoutY="234.0" mnemonicParsing="false" onAction="#handleRandomCategoryBtn" prefHeight="32.0" prefWidth="250.0" text="Random Category" GridPane.rowIndex="3">
                    <font>
                        <Font size="22.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="180.0" />
                    </GridPane.margin>
                </Button>
                <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                    <children>
                        <Text fx:id="accuracyTextView" strokeType="OUTSIDE" strokeWidth="0.0" text="Accuracy : 100%" textAlignment="CENTER" wrappingWidth="960.0">
                            <HBox.margin>
                                <Insets top="20.0" />
                            </HBox.margin>
                            <font>
                                <Font size="48.0" />
                            </font>
                        </Text>
                    </children>
                </HBox>
                <Text fx:id="wellDoneTextView" strokeType="OUTSIDE" strokeWidth="0.0" text="Good Job!" textAlignment="CENTER" wrappingWidth="960.0" GridPane.columnSpan="2">
                    <font>
                        <Font size="96.0" />
                    </font>
                </Text>
            </children>
        </GridPane>
    </center>
</BorderPane>
