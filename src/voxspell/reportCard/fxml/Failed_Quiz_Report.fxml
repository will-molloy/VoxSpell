<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/8.0.102-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="voxspell.reportCard.controller.FailedQuizReportCardController">
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="507.0" minWidth="10.0" prefWidth="480.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="481.0" minWidth="10.0" prefWidth="480.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="360.0" minHeight="10.0" prefHeight="340.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="60.0" minHeight="0.0" prefHeight="60.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="retryLevelBtn" mnemonicParsing="false" onAction="#handleRetryLevelBtn" prefHeight="32.0" prefWidth="280.0" text="Retry Level xx" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font size="22.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="40.0" />
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleReturnToMainMenuBtn" prefHeight="32.0" prefWidth="280.0" text="Main Menu" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <font>
                        <Font size="22.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="40.0" />
                    </GridPane.margin>
                </Button>
                <Button layoutX="10.0" layoutY="234.0" mnemonicParsing="false" onAction="#handleRandomCategoryBtn" prefHeight="32.0" prefWidth="280.0" text="Random Category" GridPane.rowIndex="3">
                    <font>
                        <Font size="22.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="150.0" />
                    </GridPane.margin>
                </Button>
                <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                    <children>
                        <Text fx:id="accuracyTextView" strokeType="OUTSIDE" strokeWidth="0.0" text="Accuracy : 100%" textAlignment="CENTER" wrappingWidth="960.0">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <font>
                                <Font size="52.0" />
                            </font>
                        </Text>
                    </children>
                </HBox>
                <Button fx:id="viewMistakesBtn" mnemonicParsing="false" onAction="#handleMistakesBtn" prefHeight="32.0" prefWidth="280.0" text="View Mistakes" GridPane.rowIndex="2">
                    <font>
                        <Font size="22.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="150.0" />
                    </GridPane.margin>
                </Button>
                <Pane fx:id="failurePane" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" />
            </children>
        </GridPane>
    </center>
</BorderPane>
